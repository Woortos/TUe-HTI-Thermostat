<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#ffff00"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ThermostatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bPlus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/textView2"
            android:layout_below="@+id/textClock"
            android:src="@drawable/doubleup"
            android:layout_weight="1.97" />

        <TextView
            android:id="@+id/temp"
            android:layout_width="157dp"
            android:layout_height="match_parent"

            android:text="21 &#x2103;"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/bMinus"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/temp"
            android:src="@drawable/doubledown" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="258dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textClock"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Current Temperature"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:indeterminate="false"
            android:max="30"
            android:progressTint="#336699"
            android:thumbTint="#336699"
            android:layout_below="@+id/temp"
            android:layout_alignParentStart="true" />

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white" />

    </RelativeLayout>

    <Button
        android:id="@+id/week_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Week Overview" />

    <Button
        android:id="@+id/testing_ws"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/week_overview"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Testing Web Service" />

</LinearLayout>